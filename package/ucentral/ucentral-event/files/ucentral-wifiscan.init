#!/bin/sh /etc/rc.common

START=80

USE_PROCD=1
PROG=/usr/sbin/ucentral-wifiscan

service_triggers() {
	procd_add_reload_trigger event
}

start_service() {
	interval=$(uci get event.wifiscan.interval)
	[ -z "$interval" ] && return
	procd_open_instance
	procd_set_param command "$PROG"
	procd_set_param respawn
	procd_close_instance
}
