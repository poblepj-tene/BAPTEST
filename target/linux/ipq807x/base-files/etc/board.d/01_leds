#!/bin/sh

. /lib/functions/uci-defaults.sh

board_config_update

board=$(board_name)

case "$board" in
bamboo-dynamics,bap6000|\
pangu,l6018)
	ucidef_set_led_netdev "wan" "WAN" "green:net" "eth4"
	ucidef_set_led_netdev "wlan2g" "WLAN2G" "green:wlan2g" "wlan1"
	ucidef_set_led_netdev "wlan5g" "WLAN5G" "green:wlan5g" "wlan0"
	;;
esac

board_config_flush

exit 0
